<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;netstandard2.0</TargetFrameworks>
    <AssemblyName>Microsoft.Bot.Builder.FormFlow.Json</AssemblyName>
    <RootNamespace>Microsoft.Bot.Builder.FormFlow.Json</RootNamespace>
    <PackageId>Microsoft.Bot.Builder.FormFlow.Json</PackageId>
    <Authors>Microsoft</Authors>
    <Product>Microsoft Bot Builder</Product>
    <Version>3.1.3</Version>
    <Description>
      Microsoft Bot Builder extension for specifying a guided FormFlow dialog using an extended JSON Schema. Most of the annotations are declarative but you can
      also include C# code fragments that are dynamically compiled.
    </Description>
    <PackageProjectUrl>https://github.com/Microsoft/BotBuilder</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Microsoft/BotBuilder</RepositoryUrl>
    <PackageIconUrl>http://docs.botframework.com/images/bot_icon.png</PackageIconUrl>
    <RepositoryType>git</RepositoryType>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <GenerateDocumentationFiles>True</GenerateDocumentationFiles>
    <NoWarn>1591;1701;1702;1705;1998</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Scripting" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.Bot.Builder\Microsoft.Bot.Builder.2017.csproj" />
    <ProjectReference Include="..\Microsoft.Bot.Connector\Microsoft.Bot.Connector.2017.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Properties\**\*" />
  </ItemGroup>

</Project>